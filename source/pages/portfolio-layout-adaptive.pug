extends ../pug/layout.pug

block header
  +header(pagesList, 0)

block content
  section.portfolio-category
    h1.portfolio-category__title.page-title Адаптивная вёрстка

    ul.portfolio-category__breadcrumbs.breadcrumbs
      li.breadcrumbs__item
        a.breadcrumbs__link.link.link--italic(href='portfolio.html') Портфолио
      li.breadcrumbs__item
        a.breadcrumbs__link.breadcrumbs__link--current.link.link--italic Адаптивная вёрстка

