extends ../pug/layout.pug

block header
  +header(pagesList, 0)

block content
  section.portfolio-category
    h1.portfolio-category__title.page-title Фиксированная вёрстка

    ul.portfolio-category__breadcrumbs.breadcrumbs
      li.breadcrumbs__item
        a.breadcrumbs__link.link.link--italic(href='portfolio.html') Портфолио
      li.breadcrumbs__item
        a.breadcrumbs__link.breadcrumbs__link--current.link.link--italic Фиксированная вёрстка

    ul.portfolio-category__list
      li.portfolio-category__item
        a.portfolio-category__link.tool-tip.tool-tip--portfolio(href='#', data-title='Nerds')
          img.portfolio-category__image(src='img/nerds-index.jpg', alt='Nerds - сайт веб-студии')

block footer
  +footer()
